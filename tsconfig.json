/* Based on https://github.com/tsconfig/bases/blob/501da2bcd640cf95c95805783e1012b992338f28/bases/node22.json */
{
  "compilerOptions": {
    "lib": ["es2023"],
    "module": "node16", // 指定生成代码的模板标准
    "target": "es2022", // 目标语言的版本
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
    "outDir": "dist",
    "removeComments": true
  },
  "include": [
    "scripts/**/*",
    "test/**/*"
  ],
  "files": [
    "hardhat.config.ts"
  ]
}
